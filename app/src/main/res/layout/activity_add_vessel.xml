<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".pilot.activities.AddVesselActivity">
  <com.google.android.material.appbar.AppBarLayout
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

  </com.google.android.material.appbar.AppBarLayout>


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="8"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Vessle Name"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etVesselName"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Master Name"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etMasterName"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Flag"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etFlag"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="GRT"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etGrt"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="NRT"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etNrt"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Dech Cargo(TON)"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etDechCargo"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="LOA(Meter)"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etLoa"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Local Agent"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etLocalAgent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Last Port"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etLastPort"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:hint="Next Port"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etNextPort"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="1">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Rotation"
            android:textColor="@android:color/black">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/etRotation"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:inputType="text"
              android:lines="1"
              android:maxLines="1"
              android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical">
        <Button
            android:id="@+id/btnSaveVsl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:onClick="btnSaveVsl"
            android:text="Save Vassel"
            tools:ignore="OnClick" />


      </LinearLayout>
    </LinearLayout>
  </ScrollView>


</LinearLayout>
